<div id="pageTitle">
		<h1>Edit <%= @activity.Activity_Id%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @activity.object %>
    <%= link_to "Delete", :action => :delete, :id => @activity.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @activity.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Activity id: </td>
              			<td class="itemValue"><input type="text" name="activity[Activity_Id]" value="<%= @activity.Activity_Id %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
