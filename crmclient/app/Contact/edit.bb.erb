<div id="pageTitle">
		<h1>Edit <%= @contact.Contact_id%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @contact.object %>
    <%= link_to "Delete", :action => :delete, :id => @contact.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @contact.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Contact: </td>
              			<td class="itemValue"><input type="text" name="contact[Contact_id]" value="<%= @contact.Contact_id %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Salutation: </td>
              			<td class="itemValue"><input type="text" name="contact[Salutation]" value="<%= @contact.Salutation %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
